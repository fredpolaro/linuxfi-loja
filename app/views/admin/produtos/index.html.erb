<% content_for :cabecalho do %>
  Listagem de Produtos
<% end %>

<%= button_to "Novo", new_admin_produto_path %>

<% unless @produtos.blank? %>

  <table>
    <%= cabecalho_de_tabela "ID", "Nome", "Preço", "Ações"   %>
    <tbody>
      <% @produtos.each do |produto| %>
      <tr>
        <td> <%= produto.id %> </td>
        <td> <%= produto.nome %> </td>
        <td> <%= number_to_currency produto.preco %> </td>
        <td>
          <%= link_to "Editar", edit_admin_produto_path( produto ) %>
          <%= link_to "Remover", admin_produto_path( produto ),   :method => :delete, :confirm => "Você tem certeza ?" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br/>

  <%= will_paginate @produtos %>

<% else %>

  <p>Não há produtos cadastrados no banco. </p>

<% end %>

